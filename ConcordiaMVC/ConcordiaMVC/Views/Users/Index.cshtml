@model ConcordiaMVC.Models.UsersList

@{
    ViewData["Title"] = "Users";
    Layout = "_Layout";
}

<h2 class="display-5"> @ViewData["Title"] </h2>

<div class="d-flex flex-row">
    <div class="d-flex flex-column w-100">
        <h4> @ViewData["Title"] List </h4>
        <div class="d-flex flex-column align-items-center">
            @foreach (var scientist in Model.Scientists!)
            {
                <div class="card w-100 mb-2 border border-dark">
                    <div class="card-body d-flex flex-row align-items-center justify-content-between">
                        <h5 class="card-title"> @scientist.FullName </h5>
                        <div>
                            <a class="btn btn-outline-dark mr-2" asp-action="DetailSingle" asp-route-id="@scientist.Id"> Detail Simple </a>
                            <a class="btn btn-outline-dark" asp-action="DetailMulti" asp-route-id="@scientist.Id"> Detail Advanced </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>